<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Prescriptions</title>
    <script src="/scripts/prescriptions.js"></script>
    <link rel="stylesheet" href="/css/prescription.css">
</head>
<body>
    <div class="container">
        <div class="patient-info-container">
            <h1>Patient Information</h1>
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>UID</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= patient.username %></td>
                        <td><%= patient.last_name %></td>
                        <td><%= patient.first_name %></td>
                        <td><%= patient.email %></td>
                        <td><%= patient.phone_number %></td>
                        <td><%= patient.height %></td>
                        <td><%= patient.weight %></td>
                        <td><%= patient.uid %></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="prescriptions-container">
            <h1>Prescriptions</h1>
            <table>
                <thead>
                    <tr>
                        <th>Doctor ID</th>
                        <th>Dosage</th>
                        <th>Drug Class</th>
                        <th>Instructions</th>
                        <th>Medication</th>
                        <th>Claimed?</th>
                        <th>Claim Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% prescriptions.forEach(prescription => { %>
                        <tr>
                            <td><%= prescription.doctorId %></td>
                            <td><%= prescription.dosage %></td>
                            <td><%= prescription.drugClass %></td>
                            <td><%= prescription.instructions %></td>
                            <td><%= prescription.medication %></td>
                            <td class="claimed-checkbox">
                                <input type="checkbox"
                                       id="claimed-<%= prescription.id %>"
                                       <%= prescription.claimed ? 'checked disabled' : '' %>
                                       onchange="<%= prescription.claimed ? '' : 'updatePrescriptionClaimedStatus(\'' + prescription.id + '\', this.checked)' %>">
                            </td>
                            <td><%= prescription.claimed ? prescription.claimDate : 'N/A' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
